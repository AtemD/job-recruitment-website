{% extends 'templates/app.twig' %}

	{% block content %}
<div class="row">
	<div class="col-md-10">
		<div id="statelist">
			<div class="panel">
                <div class="panel-heading">
                    <div class="text-center">
                        <div class="row">
                            <div class="col-sm-9">
                                <h3 class="pull-left">Create new state</h3>
                            </div>
                            <div class="col-sm-3">
                                <h4 class="pull-right">
                                <small> {{ state.created_at }} </small>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
                
            <div class="panel-body">
                <div class="login-form" >
          <form action="{{ path_for('states.add') }}" method="post" autocomplete="off"> 
            <div class="form-group {{ errors.name ? 'has-error' : '' }}">
              <input type="text" class="form-control login-field"  name="name" 
              placeholder="Enter state name" >
              <label class="login-field-icon fui-user" for="login-first-name"></label>
              {% if errors.name %}
              	<span class="help-block">{{ errors.name | first }}</span>
              {% endif %}
            </div>
            
          
            <button class="btn btn-primary btn-lg" type="submit">Submit</button>
            
             {{ csrf.field | raw }}
            </form>
          </div>
            </div>
            
        </div>
        
       </div>
    </div>
    </div>
        <div class="col-md-1"></div>
        <div class="col-md-3">
        </div>
        <div class="col-md-1">
        </div>
    </div>
{% endblock %}
